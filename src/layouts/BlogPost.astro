  <body>
    <Header />
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1>{title}</h1>
            <hr />
          </div>

          <!-- 目次の追加 -->
          {
            headings && headings.length > 0 && (
              <TableOfContents headings={headings} />
            )
          }

          <slot />
        </div>
      </article>
    </main>
    <Footer />
