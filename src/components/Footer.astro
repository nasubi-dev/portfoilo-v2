---
import { css } from "@styled-system/css";
import { HStack, VStack, styled as p } from "@styled-system/jsx";
import { SITE_TITLE } from "@/consts";
import TwitterIcon from "../../public/MdiTwitter.svg";
import GithubIcon from "../../public/MdiGithub.svg";

const today = new Date();
---

<footer class={css({ bg: "nsb.bg-on", py: "8", width: "100%" })}>
  <VStack
    width="100%"
    maxWidth="1200px"
    margin="0 auto"
    padding="20px"
    gap="4"
    alignItems="center"
  >
    <HStack gap="6" justifyContent="center">
      <p.a
        href="https://twitter.com/nasubi_dev"
        target="_blank"
        aria-label="Twitter"
      >
        <TwitterIcon width="32px" height="32px" fill="currentColor" />
      </p.a>
      <p.a
        href="https://github.com/nasubi-dev"
        target="_blank"
        aria-label="GitHub"
      >
        <GithubIcon width="32px" height="32px" fill="currentColor" />
      </p.a>
    </HStack>

    <p.p fontSize="sm" color="nsb.text-variant" textAlign="center">
      Copyright &copy; {today.getFullYear()}
      nasubi_dev - All rights reserved.
    </p.p>

    <p.p fontSize="sm" color="nsb.text-variant" textAlign="center">
      {SITE_TITLE}
    </p.p>
  </VStack>
</footer>
