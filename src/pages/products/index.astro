<BaseLayout>
  <Expanded basedOn="container" items="center">
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`/products/${post.id}/`}>
              <img src={post.data.thumbnail} alt="" />
              <h4 class="title">{post.data.title}</h4>
              <p class="date">
                <FormattedDate date={post.data.createdAt} />
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </Expanded>
</BaseLayout>
